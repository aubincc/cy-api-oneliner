        "outDir": "dist",
        "declaration": true,
        "allowJs": true,
        "target": "es6",
        "removeComments": false,
        "moduleResolution": "node",
        "strict": true,
        "types": [
            "cypress"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}